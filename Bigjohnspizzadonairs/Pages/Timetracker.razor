@page "/time-tracker"

<div class="container mx-auto bg-gray-100">
    <div class="flex justify-center items-center h-screen bg-gray-100">
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-full max-w-lg transform transition duration-300 hover:scale-110 hover:shadow-lg">
            <div class="mb-4">
                <h1 class="text-gray-900 font-bold text-2xl mb-1">Welcome to Time Tracker</h1>
                <p class="text-gray-700 text-base">Efficiently manage your working hours</p>
            </div>

            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="user-id">
                    Enter with your credentials
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="user-id" type="text" placeholder="User Id">
                <input class="mt-3 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="Password">
                <button class="bg-[#8C8C73] hover:bg-green-600 text-white font-bold rounded-md py-2 px-4 transition duration-200" type="button">
                    Punch In/Out
                </button>
            </div>

            <div class="pt-6 border-t border-gray-200">
                <h2 class="text-gray-900 font-bold text-xl mb-2">Last Activity</h2>
                <p class="text-gray-700">Punched in at:<span> --:-- </span></p>
                <p class="text-gray-700">Punched out at:<span> --:-- </span></p>
            </div>
        </div>
    </div>

</div>
